<Window x:Class="SampleScheduleWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleScheduleWpf"
        mc:Ignorable="d"
        Title="AIスケジューラー" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>

        <TextBox Text="{Binding Input}" />
        <TextBlock Text="{Binding Output}" Grid.Row="2" TextWrapping="Wrap" />
        <Button Content="送信" Grid.Column="1" Command="{Binding SendCommand}"/>
        <Button Content="保存" Grid.Column="1" Grid.Row="1" Command="{Binding SaveCommand}"/>

    </Grid>
</Window>
